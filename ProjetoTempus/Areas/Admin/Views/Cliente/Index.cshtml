@using ProjetoTempus.Models
@model List<Cliente>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Cliente Listagem</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Novo Cliente</a>
        </div>
    </div>
    <div class="btn-group pull-right">
        <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            Relatorios
        </button>
        <ul class="dropdown-menu pull-right">
            <li style="width: 300px; padding:10px;"><a style=" text-decoration: none; color: black;" href="@Url.Action("Relatorios","Cliente")">Relatorios 1 e 2</a></li>
            <li style="width: 300px; padding:10px;"><a style=" text-decoration: none; color: black;" href="@Url.Action("Dados","Cliente")">Relatorio de Dados</a></li>
        </ul>
    </div>
    <br />
    <br />

    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Renda Familiar</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@section scripts{
    <script src="~/js/cliente.js"></script>
}